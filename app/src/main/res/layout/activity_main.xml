<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="1pt"
        android:layout_weight="1"
        android:autofillHints=""
        android:background="@color/gray"
        android:ems="10"
        android:gravity="right|center"
        android:inputType="textPersonName"
        android:text="0"
        android:textSize="40pt"
        tools:ignore="HardcodedText,LabelFor,RtlHardcoded,DuplicateSpeakableTextCheck,VisualLintTextFieldSize" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buAC"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginEnd="1pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/blueback"
                android:onClick="acEvent"
                android:text="@string/ac"
                android:textColor="#3F51B5"
                tools:ignore="UsingOnClickInXml,VisualLintButtonSize" />

            <Button
                android:id="@+id/buPlusMinus"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/blueback"
                android:onClick="numberEvent"
                android:text="+/-"
                android:textColor="#3F51B5"
                tools:ignore="HardcodedText,RtlHardcoded,UsingOnClickInXml,VisualLintButtonSize" />

            <Button
                android:id="@+id/buDivide"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginEnd="1pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/blueback"
                android:onClick="operatorEvent"
                android:text="/"
                tools:ignore="HardcodedText,UsingOnClickInXml,TextContrastCheck,VisualLintButtonSize" />

            <Button
                android:id="@+id/buMultiply"
                android:text="*"
                android:onClick="operatorEvent"
                android:textColor="#FFF"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                style="?android:attr/buttonBarButtonStyle"
                tools:ignore="HardcodedText,RtlHardcoded,UsingOnClickInXml,VisualLintButtonSize" />
        </TableRow>
        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bu7"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginEnd="1pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/blueback"
                android:onClick="numberEvent"
                android:text="@string/_7"
                tools:ignore="UsingOnClickInXml,TextContrastCheck,VisualLintButtonSize" />

            <Button
                android:id="@+id/bu8"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/blueback"
                android:onClick="numberEvent"
                android:text="@string/_8"
                android:textColor="#3F51B5"
                tools:ignore="RtlHardcoded,UsingOnClickInXml,VisualLintButtonSize" />

            <Button
                android:id="@+id/bu9"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginEnd="1pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/blueback"
                android:onClick="numberEvent"
                android:text="@string/_9"
                tools:ignore="UsingOnClickInXml,TextContrastCheck,VisualLintButtonSize" />

            <Button
                android:id="@+id/buPercent"
                android:text="%"
                android:onClick="percentEvent"
                android:textColor="#FFF"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                style="?android:attr/buttonBarButtonStyle"
                tools:ignore="HardcodedText,UsingOnClickInXml,VisualLintButtonSize"
                android:layout_marginEnd="1pt" />
        </TableRow>
        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bu4"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginEnd="1pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/blueback"
                android:onClick="numberEvent"
                android:text="@string/_4"
                android:textColor="#3F51B5"
                tools:ignore="UsingOnClickInXml,VisualLintButtonSize" />

            <Button
                android:id="@+id/bu5"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginEnd="1pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/blueback"
                android:onClick="numberEvent"
                android:text="@string/_5"
                tools:ignore="UsingOnClickInXml,TextContrastCheck,VisualLintButtonSize" />

            <Button
                android:id="@+id/bu6"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginEnd="1pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/blueback"
                android:onClick="numberEvent"
                android:text="@string/_6"
                tools:ignore="UsingOnClickInXml,TextContrastCheck,VisualLintButtonSize" />

            <Button
                android:id="@+id/buPlus"
                android:text="+"
                android:onClick="operatorEvent"
                android:textColor="#FFF"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                style="?android:attr/buttonBarButtonStyle"
                tools:ignore="HardcodedText,UsingOnClickInXml,VisualLintButtonSize"
                android:layout_marginEnd="1pt" />
        </TableRow>
        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bu1"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginEnd="1pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/blueback"
                android:onClick="numberEvent"
                android:text="@string/_1"
                android:textColor="#3F51B5"
                tools:ignore="UsingOnClickInXml,VisualLintButtonSize" />

            <Button
                android:id="@+id/bu2"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginEnd="1pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/blueback"
                android:onClick="numberEvent"
                android:text="@string/_2"
                tools:ignore="UsingOnClickInXml,TextContrastCheck,VisualLintButtonSize" />

            <Button
                android:id="@+id/bu3"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginEnd="1pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/blueback"
                android:onClick="numberEvent"
                android:text="@string/_3"
                android:textColor="#3F51B5"
                tools:ignore="UsingOnClickInXml,VisualLintButtonSize" />

            <Button
                android:id="@+id/buMinus"
                android:text="-"
                android:onClick="operatorEvent"
                android:textColor="#FFF"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                style="?android:attr/buttonBarButtonStyle"
                tools:ignore="HardcodedText,UsingOnClickInXml,VisualLintButtonSize"
                android:layout_marginEnd="1pt" />
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TableRow
        android:layout_marginBottom="1pt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <Button
            android:id="@+id/bu0"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="46pt"
            android:layout_height="30pt"
            android:layout_marginEnd="1pt"
            android:layout_marginRight="1pt"
            android:layout_weight="2"
            android:background="@color/blueback"
            android:onClick="numberEvent"
            android:text="@string/_0"
            tools:ignore="UsingOnClickInXml,VisualLintButtonSize,TextContrastCheck" />

        <Button
            android:id="@+id/buDot"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="46pt"
            android:layout_height="30pt"
            android:layout_marginEnd="1pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/blueback"
            android:onClick="numberEvent"
            android:text="."
            tools:ignore="HardcodedText,UsingOnClickInXml,TextContrastCheck,VisualLintButtonSize" />

        <Button
            android:id="@+id/buEqual"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_marginEnd="1pt"
            android:layout_marginRight="1pt"
            android:layout_weight="1"
            android:background="@color/blueback"
            android:onClick="equalEvent"
            android:text="="
            tools:ignore="HardcodedText,UsingOnClickInXml,TextContrastCheck,VisualLintButtonSize" />

    </TableRow>

    </LinearLayout>
</LinearLayout>
